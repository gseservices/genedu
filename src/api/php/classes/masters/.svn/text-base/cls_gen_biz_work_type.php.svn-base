			$req_deps ['department'] = $jsonDepartment;
			$objDepartment = null;		
			//Work Step
			$jsonWorkStep = "";
			$objWorkStep =  new cls_gen_biz_work_type();
			$jsonWorkStep = $objWorkStep->GetData(SELECT_MODE_TABLE,SELECT_RETURN_TYPE_JSONSTRING,'mst_biz_work_step','uk_work_step_code, work_step_name', "");
			$req_deps ['workstep'] = $jsonWorkStep ;
			$objWorkStep = null;

			return json_encode($req_deps);

		} catch (Exception $e) {
			$this->WriteLog($ex);
		}
	}
